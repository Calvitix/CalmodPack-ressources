#calvitix Modif for scale x 3
@rings_height = -95
@rings_height_rs = -100

# Metallic Rings
entity = {
	name = "gpm_rings_metallic_small"
	cull_radius = 1500 #500
	locator = { name = "loc1" position = { 0 @rings_height 0 } rotation = { 0 0 3 }}
	attach = { "loc1" = "gpm_rings_metallic_small_attach"}
}

entity = {
	name = "gpm_rings_metallic_small_attach"
	pdxmesh = "gpm_rings_metallic_small_mesh"
	scale = 10.0
}

