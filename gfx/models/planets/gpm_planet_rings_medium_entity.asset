#calvitix Height correction
@rings_height = -95
@rings_height_rs = -100


# Metallic Rings
entity = {
	name = "gpm_rings_metallic_medium"
	cull_radius = 500
	locator = { name = "loc1" position = { 0 @rings_height 0 } rotation = { 0 0 3 }}
